<% @todo_lists.each do |p| %>
  <% p.comments.each do |c| %>
    <!--이 아래줄은 댓글 위에 '몇 일 전' 이런식으로 나오게 하는 코드.-->
    <%= c.time_ago_in_words(comment.created_at) %>
    <p><%=c.content %></p>
  <% end %>

  <form style="margin-top:40px;" action="/comments/comment" method="post">
    <input name="comment" type="text" class="form-control" id="todo_comment" placeholder="댓글을 입력하세요">
    <button type="submit" class="btn btn-default">댓글등록</button>
  </form>   
<% end %>